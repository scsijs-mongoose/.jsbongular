input, select
	min-width 300px

.drop
	position relative
	z-index 100
	&:hover ul.dropdown
		display inline-block
	ul.dropdown
		display none
		margin 0
		padding 2px
		list-style none
		background white
		border 1px solid rgb(240,240,240)
		box-shadow 0 2px 1px rgba(0,0,0,.05)
		position absolute
		right 0
		top 0
		li
			line-height 25px
			font-size 13px
			color rgb(80,80,80)
			&.separator
				height 1px
				margin 2px 12px
				background rgb(230,230,230)
				display block
			&:hover
				background rgb(240,240,240)
			a
				min-width 120px
				padding 4px 12px
				font-size 13px
				color rgb(80,80,80)
				text-decoration none
				display block

.tag
	margin 0 2px 2px 0
	padding 5px 12px
	display inline-block
	background #556F79
	border-radius 20px
	border none
	outline none
	font-size 13px
	color white
	text-decoration none
	&.disabled
		background alpha(#556F79, .2)

.block
		width 100%
		display block

.bottom
	position absolute !important
	bottom 0
	left 0
	right 0

.sidebar
	width 60px
	background #273238
	z-index 1000
	.sidebar-item
		width 60px
		height 55px
		display block
		text-align center
		line-height 55px
		font-size 20px
		color #556F79
		position relative
		z-index 100
		.hover
			padding 0
			padding-right 30px
			background #273238
			border-radius 0 30px 30px 0
			// line-height 60px
			font-weight 500
			font-size 12px
			color white
			text-align left
			text-transform uppercase
			position absolute
			left 100%
			right auto
			top 0
			bottom 0
			opacity 0
			transform translateX(-10px)
			-webkit-transform translateX(-10px)
			transition all linear .2s
		&:hover
			color white
			.hover
				opacity 1
				transform translateX(0)
				-webkit-transform translateX(0)
		&.selected
			box-shadow 3px 0 0 #83CBC4 inset
			color white

.list
	width 350px
	// background rgb(250,250,250)
	background white
	border-right 1px solid rgb(230,230,230)
	overflow auto
	.list-item
		margin 0
		padding 18px 25px
		font-size 14px
		color #273238
		display block
		text-decoration none
		position relative
		&:hover, &.selected
			background rgb(240,240,240)
		.list-title, .list-subtitle
			color #273238
			display block
			text-overflow ellipsis
			white-space nowrap
			overflow hidden
		.list-title
			font-size 14px
		.list-subtitle
			font-size 12px
			opacity .5
		.list-more
			padding-left 20px
			color #83CBC4
			display inline-block
			position absolute
			top 18px
			right 20px

.detail
	padding 30px 50px
	background white
	overflow auto
	.detail-title
		margin 20px 0 5px 0
		font-size 13px
		display block
	.detail-section
		margin 40px 0 5px 0
		// border-bottom 1px solid rgb(200,200,200)
		font-size 16px
		font-weight 500
		text-transform uppercase
		display block
	.group
		margin 10px 0
		padding 15px 20px
		background rgb(250,250,250)
		border-radius 3px
		& > label
			margin 0 0 20px 0
			font-size 16px
			font-weight 500
			text-transform uppercase
			display block

#admin

	.sidebar, .list, .detail
		display block
		position absolute

	.sidebar
		left 0
		top 0
		bottom 0

	.list
		left 60px
		top 0
		bottom 0

	.detail
		left 410px
		right 0
		top 0
		bottom 0
		&.fill
			left 60px
